<div class="row">
    <div class="col-md-12">
        <h2>Departments<a href="/departments/add" class="btn btn-success pull-right">Add New 
Department</a>
{{#if departments}}
</h2>
        <hr>
        <div class="table-responsive">
            <table class="table">
                <tr>
                    <th>Department Number</th>
                    <th>Department Name</th>
                </tr>
                {{#each departments}}
                <tr>
                    <td><a href="/employees?department={{this.departmentId}}">{{this.departmentId}}</a></td>
                    <td><a href="/department/{{this.departmentId}}">{{this.departmentName}}</a></td>
                </tr>
                {{/each}}
            </table>
        </div>
    </div>
</div>
{{else}}
    <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
    </div>
{{/if}}